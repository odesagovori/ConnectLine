    <script>
        let currentIndex = 0;

        function moveSlide(direction) {
            const slides = document.querySelectorAll('.slider-container .card');
            const totalSlides = slides.length;

            currentIndex += direction;

            if (currentIndex < 0) {
                currentIndex = totalSlides - 1; // Loop to last slide
            } else if (currentIndex >= totalSlides) {
                currentIndex = 0; // Loop to first slide
            }

            const offset = -currentIndex * 345; // Adjust for card width and margin
            document.querySelector('.slider-container').style.transform = `translateX(${offset}px)`;
        }
    </script>
